<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_dashboard_card">

    <!--  Icon Image -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toEndOf="@id/numberImage"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_dashboard_circle_background"
        android:padding="16dp"
        tools:visibility="visible"
        app:tint="@color/dashboard_expandable_app_icon"
        android:src="@drawable/ic_camera_icon"
        android:contentDescription="Icon" />

    <!-- Circle with Number -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/numberImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/badge_background"
        tools:text="@tools:sample/date/day_of_week"
        android:visibility="gone"
        tools:visibility="visible"

        android:textColor="@color/dashboard_background_color"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_toEndOf="@id/thumbnail"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Heading Text -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/thumbnail"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"

        tools:text="@tools:sample/full_names"
        android:maxLines="@integer/expended_list_child_title_max_line"
        android:text="Keep the toilet clean"
        android:textColor="@color/dashboard_text_color"
        android:textStyle="bold" />

    <!-- Description Text -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/child"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        tools:text="@tools:sample/first_names"
        android:textAppearance="?android:attr/textAppearanceListItemSecondary"
        android:text=""
        android:maxLines="@integer/expended_list_child_description_max_line"
        android:textColor="@color/dashboard_text_color" />
    </LinearLayout>


</RelativeLayout>